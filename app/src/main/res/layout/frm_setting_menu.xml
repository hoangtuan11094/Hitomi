<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FrmSettingMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTopBar"
        style="@style/TopBarTheme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblSettingsMenu"
            style="@style/LabelTitleTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBack"
            style="@style/ButtonBackTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/clTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btnSettingBase"
            android:text="@string/lblInitialSetting"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/bg_button_black"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_30sdp"/>

        <Button
            android:id="@+id/btnSettingFunc"
            android:text="@string/lblFunctionSetting"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSettingBase"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/bg_button_black"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_30sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>